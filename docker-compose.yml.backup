version: '3.8'

services:
  postgres:
    image: postgres:15
    container_name: form-builder-db
    restart: always
    environment:
      POSTGRES_USER: formadmin
      POSTGRES_PASSWORD: formpassword123
      POSTGRES_DB: formbuilder
    ports:
      - "5432:5432"
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data: